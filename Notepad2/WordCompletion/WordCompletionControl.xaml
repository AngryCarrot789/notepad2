<UserControl x:Class="Notepad2.WordCompletion.WordCompletionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notepad2.WordCompletion"
             mc:Ignorable="d" 
             Height="225" Width="320">
    <ListBox ItemsSource="{Binding WordItems, UpdateSourceTrigger=PropertyChanged}"
             SelectedItem="{Binding SelectedWord, UpdateSourceTrigger=PropertyChanged}"/>
</UserControl>
