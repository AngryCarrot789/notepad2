<UserControl x:Class="Notepad2.History.WindowHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notepad2.History"
             mc:Ignorable="d" 
             Background="Transparent"
             MaxHeight="24" MinHeight="24" d:DesignWidth="200"
             MouseDoubleClick="UserControl_MouseDoubleClick" 
             Foreground="{DynamicResource ControlDefaultForeground}">
    <Grid Background="Transparent">
        <Button Content="Reopen" 
                HorizontalAlignment="Left"
                Margin="0,2" 
                Width="48" 
                Click="Button_Click"/>
        <TextBlock Text="Items Count:" 
                   Margin="51,0,0,0" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding NotepadItems.Count, UpdateSourceTrigger=PropertyChanged}" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" 
                   Margin="120,0,2,0"/>
    </Grid>
</UserControl>
