<UserControl x:Class="Notepad2.Notepad.NotepadListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notepad2.Notepad"
             xmlns:viewmodels="clr-namespace:Notepad2.ViewModels"
             xmlns:converters="clr-namespace:Notepad2.Converters" 
             MouseDown="ElePar_MouseDown" MouseMove="ElePar_MouseMove"
             MouseLeftButtonDown="ElePar_MouseLeftButtonDown"
             mc:Ignorable="d" d:DesignWidth="175" d:DesignHeight="54" MaxHeight="178" x:Name="elePar">
    <UserControl.Resources>
        <converters:TextChangedToUnsavedIndicatorConverter x:Key="tchanunsave"/>
    </UserControl.Resources>
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Open"  Uid="0" Click="MenuItem_Click" Template="{DynamicResource DropDownMenuItemTemplate}"/>
            <MenuItem Header="Close" Uid="1" Click="MenuItem_Click" Template="{DynamicResource DropDownMenuItemTemplate}"/>
            <MenuItem Header="Open in File Explorer" Uid="2" Click="MenuItem_Click" Template="{DynamicResource DropDownMenuItemTemplate}"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid Background="Transparent">
        <TextBox Text="{Binding Document.FileName, UpdateSourceTrigger=PropertyChanged}" 
                 Background="Transparent"
                 BorderBrush="Transparent" 
                 Margin="2,2,0,31" 
                 AcceptsReturn="False"
                 MaxHeight="60"
                 TextWrapping="Wrap"
                 AcceptsTab="False"
                 FontSize="14" HorizontalAlignment="Left" Width="152" />
        <TextBlock Text="{Binding Document.Text.Length, UpdateSourceTrigger=PropertyChanged}" Margin="36,0,0,3" VerticalAlignment="Bottom" FontSize="11" TextAlignment="Left" HorizontalAlignment="Left" Width="64" Height="15"/>
        <TextBlock Text="{Binding Document.FileSize, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,16,4" VerticalAlignment="Bottom" FontSize="10" HorizontalAlignment="Right" Width="59" TextAlignment="Right"/>
        <TextBlock Margin="4,0,0,3" VerticalAlignment="Bottom" FontSize="11" Height="15" HorizontalAlignment="Left" Width="32"><Run Text="Chars"/><Run Text=":"/></TextBlock>
        <TextBlock Text="KB" Margin="0,0,3,4" VerticalAlignment="Bottom" FontSize="10" HorizontalAlignment="Right" Width="12" TextAlignment="Right"/>
        <Button Background="Transparent" Content="X" HorizontalAlignment="Right" Margin="0,3,3,0" VerticalAlignment="Top" Width="16" Height="18" Click="Button_Click" FontSize="10"/>
        <TextBlock Text="{Binding Path=HasMadeChanges, Converter={StaticResource tchanunsave}}" HorizontalAlignment="Left" Margin="4,0,0,18" VerticalAlignment="Bottom" Width="50" FontSize="10"/>
    </Grid>
</UserControl>
