<Window x:Class="Notepad2.Views.HelpDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad2.Views"
        mc:Ignorable="d"
        Title="HelpDialog" Height="250" Width="400" Background="{DynamicResource BackgroundColour}">
    <Grid>
        <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock FontSize="32" 
                   HorizontalAlignment="Center"
                   FontWeight="Bold">
            Sample Pad
            </TextBlock>
            <TextBlock FontSize="24"
                   FontWeight="SemiBold">
            About
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Text="Notepad but with tabs and a smoofy dark theme" FontSize="16"/>
            <TextBlock FontSize="24"
                    FontWeight="SemiBold" Text="Made by"/>
            <TextBlock TextWrapping="Wrap" Text="TheR" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
