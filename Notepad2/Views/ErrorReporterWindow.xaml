<Window x:Class="Notepad2.Views.ErrorReporterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad2.Views"
        mc:Ignorable="d"
        Title="Error" 
        Height="240" 
        Width="450"
        KeyDown="Window_KeyDown"
        Style="{DynamicResource CustomWindowStyle}" WindowStyle="SingleBorderWindow">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="120" Height="34" FontSize="16" Click="Button_Click"/>
        <TextBox x:Name="ErrorTextBox" Margin="10,10,10,49" TextWrapping="Wrap"
                 Background="Transparent"
                 BorderBrush="Transparent"
                 FontSize="24"/>

    </Grid>
</Window>
