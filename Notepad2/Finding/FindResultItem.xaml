<UserControl x:Class="Notepad2.Finding.FindResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Notepad2.Finding"
             mc:Ignorable="d" 
             Height="40" 
             Background="Transparent"
             MouseDoubleClick="UserControl_MouseDoubleClick"
             Foreground="{DynamicResource ControlDefaultForeground}">
    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
        <StackPanel MinWidth="30" Margin="0 0 5 0">
            <TextBlock Text="Start" HorizontalAlignment="Center"/>
            <Separator/>
            <TextBlock Text="{Binding StartIndex, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel MinWidth="38" Margin="0 0 5 0">
            <TextBlock Text="Length" HorizontalAlignment="Center"/>
            <Separator/>
            <TextBlock Text="{Binding WordLength, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel MinWidth="124">
            <TextBlock Text="Preview of Near by Text" HorizontalAlignment="Center"/>
            <Separator/>
            <TextBlock Text="{Binding PreviewFoundText, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Visibility="Visible"/>
        </StackPanel>
    </StackPanel>
</UserControl>
