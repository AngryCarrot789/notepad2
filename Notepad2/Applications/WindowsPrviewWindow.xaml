<Window x:Class="Notepad2.Applications.WindowsPrviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad2.Applications"
        mc:Ignorable="d"
        Title="All currently open windows" 
        MinHeight="160"
        Height="320"
        MinWidth ="332" MaxWidth="332"
        Width="332"
        Closing="Window_Closing"
        Topmost="True"
        Style="{DynamicResource CustomWindowStyle}">
    <Grid>
        <ListBox x:Name="mn" ItemsSource="{Binding WindowPreviews, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalContentAlignment="Stretch" Margin="0,0,0,39"/>
        <Button HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
                Command="{Binding ShutdownApplicationCommand}"
                Content="Close all windows (shutdown app)" Height="39" 
                BorderBrush="{DynamicResource ControlBrightDefaultBorderBrush}"
                BorderThickness="1 0 1 1"/>
    </Grid>
</Window>
